<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Map_Question"
        android:textSize="24sp"
        android:scrollHorizontally="false"
        android:layout_width="150dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Duration"
        android:minWidth="80dp"
        android:minHeight="25dp"
        android:layout_below="@+id/tv_Map_Question"
        android:layout_alignParentStart="true"
        android:paddingTop="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Rating"
        android:layout_below="@+id/imageView_favorite"
        android:layout_marginRight="12dp"
        android:layout_alignEnd="@+id/imageView_favorite" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_border"
        android:id="@+id/imageView_favorite"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tv_Map_Question"
        android:layout_marginStart="96dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flag_button"
        android:id="@+id/imageView_flag"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView_Rating" />

</RelativeLayout>