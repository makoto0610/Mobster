<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_down_vote"
        android:id="@+id/imageView_downVote"
        android:layout_marginEnd="18dp"
        android:layout_alignBottom="@+id/textView_Duration"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Question"
        android:textSize="24sp"
        android:scrollHorizontally="false"
        android:layout_width="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView_Rating"
        android:minHeight="80dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Rating"
        android:textAlignment="center"
        android:layout_above="@+id/imageView_downVote"
        android:layout_alignStart="@+id/imageView_downVote"
        android:layout_alignEnd="@+id/imageView_downVote" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_up_vote"
        android:id="@+id/imageView_upVote"
        android:layout_above="@+id/textView_Rating"
        android:layout_toEndOf="@+id/textView_Question" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Duration"
        android:minWidth="80dp"
        android:minHeight="25dp"
        android:layout_below="@+id/textView_Question"
        android:layout_alignParentStart="true" />


</RelativeLayout>